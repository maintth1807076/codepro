<!--Modal login-->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="form-header blue-gradient">
                    <h3 class="modal-title"><i class="fa fa-lock" id="loginModalLabel"></i> Login:</h3>
                </div>

                <button type="button" id="btn-show-modal" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="" id="loginForm" name="login-form">
                    <div class="form-inline">
                        <i class="fa fa-envelope prefix"></i> &nbsp;
                        <label for="loginInputEmail">Email address</label>
                        <input type="text" name="email" class="form-control" id="loginInputEmail"
                               aria-describedby="emailHelp" placeholder="Enter email">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                            else.
                        </small>
                    </div>
                    <div class="form-inline">
                        <i class="fa fa-lock prefix"></i>&nbsp;
                        <label for="loginInputPassword1">Password</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <input type="password" name="password" class="form-control" id="loginInputPassword1"
                               placeholder="Password">
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="Check">
                        <label class="form-check-label" for="Check">Remember me</label>
                    </div>
                    <div class="modal-footer">
                        <div class="options">
                            <span class="grey-text">Not a member? </span><a href="#" data-toggle="modal" data-target="#registerModal">Sign Up</a>
                            <span class="grey-text">Forgot </span><a href="#">Password?</a>
                        </div>
                        <button type="button" class="btn" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary" id="btn-submit" value="submit">Sign In</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

<!-- -Modal register--->
<div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="registerModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="form-header blue-gradient ">
                    <h3 class="modal-title"><i class="fa fa-user" id="registerModalLabel"></i> Register:</h3>
                </div>
                <button type="button" id="btn-show-modal2" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/admin/customer/save" id="registerForm" name="register-form" method="post"  enctype="multipart/form-data">
                    <div class="form-inline">
                        <i class="fa fa-user prefix"></i>&nbsp;
                        <label for="registerInputusername">Username</label>
                        <input type="text" name="userName" class="form-control" id="registerInputusername"
                               aria-describedby="emailHelp" placeholder="Username">&nbsp;&nbsp;
                    </div>

                    <div class="form-inline">
                        <i class="fas fa-phone-square"></i>&nbsp;
                        <label for="registerInputPhone">Phone</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <input type="text" name="phone" class="form-control" id="registerInputPhone"
                               placeholder="Phone">
                    </div>
                    <div class="form-group">
                        <i class="fas fa-address-card"></i>&nbsp;
                        <label for="registerInputAddress">Address</label>
                        <textarea name="address" id="registerInputAddress" cols="50" rows="5"></textarea>
                    </div>
                    <div class="form-inline">
                        <i class="fas fa-address-card"></i>&nbsp;
                        <label for="registerInputAvatar">Avatar</label>&nbsp;&nbsp;&nbsp;&nbsp;
                        <input type="file" name="avatar" class="form-control" id="registerInputAvatar"
                               placeholder="Avatar">
                    </div>
                    <div class="form-inline">
                        <i class="fa fa-envelope prefix"></i>&nbsp;
                        <label for="InputEmail2">Email</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <input type="email" name="email" class="form-control" id="InputEmail2"
                               aria-describedby="email2" placeholder="Enter email">
                        <small id="email2" class="form-text text-muted">We'll never share your email with anyone
                            else.
                        </small>
                    </div>
                    <div class="form-inline">
                        <i class="fa fa-lock prefix"></i>&nbsp;
                        <label for="InputPassword2">Password</label>
                        <input type="password" name="password" class="form-control" id="InputPassword2"
                               placeholder="Password">
                    </div>

                    <div class="form-inline">
                        <i class="far fa-calendar-alt"></i>&nbsp;
                        <label for="inputBirthday">Birthday</label>&nbsp;&nbsp;&nbsp;
                        <input type="date" class="form-group" id="inputBirthday" name="birthday">
                    </div>

                    <div class="form-inline">
                        <label>&nbsp;</label>
                        <button type="button" class="btn" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary" id="btn-Submit" value="submit">Sign Up</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
        <form method="post" action="" name="checkout_form" id="checkout_form" enctype="multipart/form-data"
              class="form-horizontal">
            <div class="row">
                <div class="col-md-8 col-sm-12">
                    <div class="panel">
                        <div class="panel-heading">
                            <h3 class="panel-title">
                                Delivery address
                            </h3>
                        </div>
                        <div class="panel-body"> <!-- Apply for VN -->
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group required">
                                        <div class="row">
                                            <label class="control-label col-sm-2" for="input-firstname">Full name</label>
                                            <div class="col-sm-8">
                                                <input type="text" name="firstname" id="input-firstname" value=""
                                                       placeholder="Enter name" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group required">
                                        <div class="row">
                                            <label class="control-label col-sm-2" for="input-email">Email</label>
                                            <div class="col-sm-8">
                                                <input type="email" name="email" id="input-email" value=""
                                                       placeholder="Enter email" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group required">
                                        <div class="row">
                                            <label class="control-label col-sm-2" for="input-country">Country</label>
                                            <div class="col-sm-8">
                                                <input type="text" name="country" id="input-country" value=""
                                                       placeholder="Enter country" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group required">
                                        <div class="row">
                                            <label class="control-label col-sm-2" for="input-city">City</label>
                                            <div class="col-sm-8">
                                                <input type="text" name="city" id="input-city" value=""
                                                       placeholder="Enter city" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group required">
                                        <div class="row">
                                            <label class="control-label col-sm-2" for="input-telephone">Phone</label>
                                            <div class="col-sm-8">
                                                <input type="text" name="telephone" id="input-telephone" value=""
                                                       placeholder="Enter telephone" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group required">
                                        <div class="row">
                                            <label class="control-label col-sm-2" for="input-address">Address</label>
                                            <div class="col-sm-8">
                                                <input type="text" name="address" id="input-address" value=""
                                                       placeholder="Enter address" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2" for="input-zoneid" id="label-zone">Message
                                </label>
                                <div class="col-sm-10">
                                    <textarea name="comment" id="input-comment" rows="3" class="form-control"
                                              placeholder=""></textarea>
                                </div>
                            </div>
                            <hr>
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="is-delivery-address">
                                        <label class="form-check-label" for="is-delivery-address">
                                            <strong>The delivery address and payment are the same</strong>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">

                                    Payment methods
                                </h3>
                            </div>
                            <div class="panel-body" id="form_payment_method">
                                <div class="group">
                                    <div class="adr-oms radio select-method">
                                        <input type="radio" id="payment-method-bank_transfer" name="payment_method"
                                               value="bank_transfer">
                                        <label for="payment-method-bank_transfer">
                                            <div class="adr-oms payment-method">

                                                <div class="description">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" value="" id="is-delivery-transfer">
                                                        <label class="form-check-label" for="is-delivery-transfer">
                                                            <strong> Transfer</strong>
                                                        </label>
                                                    </div>
                                                    <div class="subtitle" style="margin-left: 15px;">Use an ATM card or Internet Banking service to conduct a transfer to us</div>

                                                    <div class="tkz-selection-info"></div>
                                                </div>
                                            </div>
                                        </label>
